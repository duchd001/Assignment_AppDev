@model Assignment_AppDev.ViewModels.CourseCategoryViewModel
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
@Html.ActionLink("Back", "Index")
@Html.ValidationSummary(false, "", new { @class = "text-danger" })
@Html.AntiForgeryToken()
@using (Html.BeginForm())
{

    <div class="form-group">
        @Html.LabelFor(t => t.Course.Name)
        @Html.TextBoxFor(co => co.Course.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(co => co.Course.Name)
    </div>

    <div class="form-group">
        @Html.LabelFor(t => t.Course.Description)
        @Html.TextBoxFor(t => t.Course.Description, new { @class = "form-control" })
        @Html.ValidationMessageFor(t => t.Course.Description)
    </div>

    <div class="form-group">
        @Html.LabelFor(t => t.Course.Category.Name)
        @Html.DropDownListFor(t => t.Course.CategoryID, new SelectList(Model.Categories, "ID", "Name"), "", new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-default">Create</button>
}
