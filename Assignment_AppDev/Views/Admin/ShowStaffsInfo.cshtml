
@{
    ViewBag.Title = "ShowStaffsInfo";
}

<h2>ShowStaffsInfo</h2>
<div class="form-group">
    @Html.ActionLink("Back to Home", "Index", "Home", null, new { @class = "btn btn-primary" })
</div>



<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>Phone</th>
            <th>Username</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>
                    @user.Email
                </td>
                <td>
                    @user.PhoneNumber
                </td>
                <td>
                    @user.UserName
                </td>
                <td>@Html.ActionLink("Edit Staff", "EditStaff", new { id = user.Id },new { @class = "btn btn-success" })</td>
                <td>
                    @Html.ActionLink("Delete", "DeleteStaff", null, new { id = user.Id },
                    new { @class = "btn btn-danger", onClick = "return confirm('Are you sure!?')" })
            </td>
        </tr>
    }
    </tbody>
</table>

